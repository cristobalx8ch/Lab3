@model probando.Models.domain.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2>¿Estás seguro que deseas eliminar este producto?</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Código de Barra</dt>
        <dd class="col-sm-9">@Model.CodigoDeBarra</dd>

        <dt class="col-sm-3">Precio</dt>
        <dd class="col-sm-9">$@Model.Precio</dd>

        <dt class="col-sm-3">Cantidad Disponible</dt>
        <dd class="col-sm-9">@Model.CantidadDisponible</dd>

        <dt class="col-sm-3">Disponible</dt>
        <dd class="col-sm-9">@(Model.Estado ? "Sí" : "No")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="codigo" value="@Model.CodigoDeBarra" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
